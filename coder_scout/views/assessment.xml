<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_coder_scout_assessment_list" model="ir.ui.view">
        <field name="name">Assessments</field>
        <field name="model">coder_scout.assessment</field>
        <field name="arch" type="xml">
            <list string="CoderScout Assessments">
                <field name="id"/>
                <field name="candidate_id" string="Candidate Name" widget="many2one"/>
                <field name="coderScout_assessment_name"/>
                <field name="job_opening"/>
                <field name="test_start_time"/>
                <field name="score"/>
                <field name="assessment_report_url" widget="url"/>
                <field name="feedback"/>
            </list>
        </field>
    </record>

    <record id="action_coder_scout_assessment" model="ir.actions.act_window">
        <field name="name">Assessments</field>
        <field name="res_model">coder_scout.assessment</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new CoderScout Assessment</p>
        </field>
    </record>

    <menuitem id="coder_scout_assessment_root"
              name="Assessment"
              parent="hr_recruitment.menu_hr_recruitment_root"
              action="action_coder_scout_assessment"/>

    <record id="view_coder_scout_assessment_no_create_button" model="ir.ui.view">
        <field name="name">coder_scout.assessment.list.no_create</field>
        <field name="model">coder_scout.assessment</field>
        <field name="inherit_id" ref="view_coder_scout_assessment_list"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>

</odoo>